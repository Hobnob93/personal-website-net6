@inherits LayoutComponentBase

<MudThemeProvider Theme="darkTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudDrawer @bind-Open="drawerOpen" Elevation="0" Color="Color.Inherit">
        <MudDrawerHeader></MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

    <MudAppBar Color="Color.Inherit" Fixed="false" Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Edge="Edge.Start" OnClick="() => DrawerToggle()" />
        <MudText Typo="Typo.h6" Class="mr-10">Kyle Hobdey</MudText>
        <MudText Typo="Typo.caption" Color="Color.Secondary">// Software Developer</MudText>
        <MudSpacer />
        <MudTooltip Text="View CV">
            <MudIconButton Icon="@Icons.Custom.FileFormats.FilePdf" Link="https://drive.google.com/file/d/1awJ3nBxMg5ywQapV1nbcmboe1gWe2chQ/view" Target="_blank" />
        </MudTooltip>
        <MudTooltip Text="Masters Graduation Certificate">
            <MudIconButton Icon="@Icons.Material.Filled.School" Link="https://drive.google.com/file/d/1jMH03SYNUx76C-Y_enc4Ux7uOR76Qjlk/view" Target="_blank" />
        </MudTooltip>
        <MudTooltip Text="Github Profile">
            <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Link="https://github.com/Hobnob93/" Target="_blank" />
        </MudTooltip>
        <MudTooltip Text="LinkedIn Profile">
            <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Link="https://www.linkedin.com/in/kyle-hobdey-39a6b6a7/" Target="_blank" />
        </MudTooltip>
        <MudTooltip Text="Contact Me">
            <MudIconButton Icon="@Icons.Material.Filled.Mail" />
        </MudTooltip>
    </MudAppBar>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

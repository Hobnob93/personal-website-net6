@inherits BaseSiteComponent

<div class="@Classes" @attributes="UserAttributes" @onclick="async () => await OnDivClicked()" style="@Style">
    <button @onclick="OnButtonClicked">GO</button>
    <svg class="tile-text" width="100%" height="100%">
        <text class="tile-text-char" x="50%" y="50%" dominant-baseline="middle" text-anchor="middle">@Char</text>
        <text class="tile-text-bg" x="50%" y="80%" dominant-baseline="middle" text-anchor="middle">@Name.ToUpper()</text>
        <text class="tile-text-name" x="50%" y="80%" dominant-baseline="middle" text-anchor="middle">@Name.ToUpper()</text>
    </svg>
    <img src="@ImagePath" alt="@ImageAlt" />
</div>

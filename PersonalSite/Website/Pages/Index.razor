@page "/"
@layout IndexLayout

<Hero>
    <!-- Life journey -->
    <HeroTile Name="About" Char="B" Class="first-word letter-1" />
    <!-- Career so far; technical skills; soft skills -->
    <HeroTile Name="Career" Char="O" Class="first-word letter-2" />
    <!-- Uni projects; Personal projects -->
    <HeroTile Name="Projects" Char="Z" Class="first-word letter-3" />
    <!-- Interactive apps like mindfk; pathfinding; cellular automata -->
    <HeroTile Name="Learn" Char="0" ImageType="jpg" Class="first-word letter-4" />

    <!-- Video games; board games; favourites; 100% completion -->
    <HeroTile Name="Games" Char="C" ImageType="jpg" Class="second-word letter-1" />
    <!-- Talk about crap. Ideas: Looking after rats; science; some dev stuff; opinions on played/completed games -->
    <HeroTile Name="Blog" Char="O" ImageType="jpg" Class="second-word letter-2" />
    <!-- Tennis; house DIY; pets -->
    <HeroTile Name="Misc" Char="D" ImageType="jpg" Class="second-word letter-3" />
    <!-- Simple contact form -->
    <HeroTile Name="Contact" Char="E" ImageType="jpg" Class="second-word letter-4" />
</Hero>